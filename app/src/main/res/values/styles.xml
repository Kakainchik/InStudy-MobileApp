<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="android:contextPopupMenuStyle">@style/Widget.MaterialComponents.PopupMenu.ContextMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/colorContextualAppbarBackground</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorTextBoxBackground</item>
    </style>

    <style name="Widget.App.Chip.File" parent="Widget.MaterialComponents.Chip.Action">
        <item name="closeIcon">@drawable/ic_sharp_close_24</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconVisible">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Widget.App.AutoCompleteTextView.Card" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="maxLines">1</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingHorizontal">10dp</item>F
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.App.EditText.Card" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="Widget.App.MaterialButton.Settings" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

</resources>