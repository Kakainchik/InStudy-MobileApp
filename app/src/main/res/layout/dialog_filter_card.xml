<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp">

    <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/filter_card_title_layout"
            app:layout_constraintBottom_toBottomOf="@id/filter_card_title_layout"
            android:minHeight="0dp"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filter_card_title_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_city"
            android:enabled="false"
            android:hint="@string/title_title">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_card_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="textNoSuggestions"/>

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_city"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/filter_card_city_layout"
                app:layout_constraintBottom_toBottomOf="@id/filter_card_city_layout"
                android:minHeight="0dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filter_card_city_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/filter_card_title_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/checkbox_city"
                android:layout_marginTop="@dimen/vertical_margin_dialog_text"
                android:enabled="false"
                android:hint="@string/title_city">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/filter_card_city_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_faculty"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/filter_card_faculty_layout"
                app:layout_constraintBottom_toBottomOf="@id/filter_card_faculty_layout"
                android:minHeight="0dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filter_card_faculty_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/checkbox_faculty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter_card_city_layout"
                android:layout_marginTop="@dimen/vertical_margin_dialog_text"
                android:enabled="false"
                android:hint="@string/title_faculty">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/filter_card_faculty_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_speciality"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/filter_card_speciality_layout"
                app:layout_constraintBottom_toBottomOf="@id/filter_card_speciality_layout"
                android:minHeight="0dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filter_card_speciality_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/checkbox_speciality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter_card_faculty_layout"
                android:layout_marginTop="@dimen/vertical_margin_dialog_text"
                android:enabled="false"
                android:hint="@string/title_speciality">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/filter_card_speciality_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"/>

        </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/filter_card_count_seekbar_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/filter_card_speciality_layout"
            android:textAlignment="center"
            android:text="@string/title_seekbar_count_card"
            android:layout_marginTop="@dimen/vertical_margin_dialog_text"/>

    <SeekBar
            android:id="@+id/filter_card_count_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/filter_card_count_seekbar_value"
            android:min="1"
            android:max="200"
            android:progress="50"/>

</androidx.constraintlayout.widget.ConstraintLayout>